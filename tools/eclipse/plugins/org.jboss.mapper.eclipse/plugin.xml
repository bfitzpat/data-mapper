<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.jboss.mapper.eclipse.category"
            name="%category.name">
      </category>
      <wizard
            category="org.jboss.mapper.eclipse.category"
            class="org.jboss.mapper.eclipse.DataMappingFromModelsWizard"
            icon="icons/transform16.png"
            id="org.jboss.mapper.eclipse.fromModelsWizard"
            name="%fromModelsWizard.name">
      </wizard>
      <wizard
            category="org.jboss.mapper.eclipse.category"
            class="org.jboss.mapper.eclipse.DataMappingFromSchemasWizard"
            icon="icons/transform16.png"
            id="org.jboss.mapper.eclipse.fromSchemasWizard"
            name="%fromSchemasWizard.name">
      </wizard>
      <primaryWizard
            id="org.jboss.mapper.eclipse.fromSchemasWizard">
      </primaryWizard>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            describer="org.jboss.mapper.eclipse.DozerConfigContentTypeDescriber"
            file-extensions="xml"
            id="org.jboss.mapper.eclipse.dozerconfigcontenttype"
            name="%content-type.name"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.jboss.mapper.eclipse.DataMapperEditor"
            contributorClass="org.jboss.mapper.eclipse.DataMapperEditorContributor"
            default="false"
            extensions="xml"
            icon="icons/transform16.png"
            id="org.jboss.mapper.eclipse.datamappereditor"
            name="%editor.name">
         <contentTypeBinding
               contentTypeId="org.jboss.mapper.eclipse.dozerconfigcontenttype">
         </contentTypeBinding>
      </editor>
   </extension>

</plugin>
